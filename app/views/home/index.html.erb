<% if @cur_url == "/recent" %>
  <div class="container" id="leader">
    <h5>The <a href="/newest">newest</a> stories with a random sampling of
    recently submitted stories that have not yet reached the front page.</h5><br>
  </div>
<% end %>

<ol class="stories list<%= @cur_url == "/hidden" ? "show_hidden" : "" %>">
  <%= render :partial => "stories/listdetail", :collection => @stories,
    :as => :story %>
</ol>
<div class="container">
<div class="morelink btn btn-default page">
  <% if @page && @page > 1 %>
    <a href="<%= @cur_url %><%= @cur_url == "/" ? "" : "/" %><%=
      @page == 2 ? "" : "page/#{@page - 1}" %>" style="color: black">&lt;&lt; Page
      <%= @page - 1 %></a>
  <% end %>

  <% if @show_more %>
    <% if @page && @page > 1 %>
      |
    <% end %>
    <a href="<%= @cur_url %><%= @cur_url == "/" ? "" : "/" %>page/<%=
      @page + 1 %>" style="color: black" >Page <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
</div>